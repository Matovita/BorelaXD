<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.borelaxd">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BorelaXD">
        <activity android:name=".AustraliaActivity"></activity>
        <activity android:name=".AfricaActivity" />
        <activity android:name=".AsiaActivity" />
        <activity android:name=".EuropeActivity" />
        <activity android:name=".SouthAmericaActivity" />
        <activity android:name=".NorthAmericaActivity" />
        <activity android:name=".StatsActivity" />
        <activity android:name=".NewsActivity" />
        <activity android:name=".CountriesActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Pop"
            android:theme="@style/Theme.BorelaXD.CustomTheme" />
        <activity
            android:name=".PopAnswer"
            android:theme="@style/Theme.BorelaXD.CustomTheme" />
    </application>

</manifest>